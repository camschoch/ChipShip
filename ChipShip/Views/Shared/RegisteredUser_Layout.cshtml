
@{
    ViewBag.Title = "RegisteredUser_Layout";
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
}

<h2>_IndexRegisteredUser</h2>

<body>
    @if (TempData["notice"] != null)
    {
        <p>@TempData["notice"]</p>
    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RegisteredUser", "Index", "RegisteredUser", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "RegisteredUser")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Cart", "DisplayShoppingCart", "RegisteredUser")</li>
                    <li>@Html.ActionLink("Address", "CreateAddress", "RegisteredUser")</li>
                    <li>@Html.ActionLink("Test", "CalculatePayment", "RegisteredUser")</li>
                    <li>@Html.ActionLink("Payment", "Payment", "RegisteredUser")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
          @using (Html.BeginForm("TestCallWalmart", "RegisteredUser", FormMethod.Get))
          {
            <style>
                button {
                    color: black;
                }
            </style>
            @Html.TextBox("search")<button type="submit">Search</button>
          }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @Html.ActionLink("Become Deliverer", "ApplyToDeliverer", "RegisteredUser")
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
