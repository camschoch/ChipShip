
@{
    ViewBag.Title = "RegisteredUser_Layout";
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
}

<body>
    <style>
        button {
            color: black;
        }
        li.search{
            padding-top:18px;
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RegisteredUser", "Index", "RegisteredUser", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "RegisteredUser")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Cart", "DisplayShoppingCart", "RegisteredUser")</li>
                    <li>@Html.ActionLink("Address", "CreateAddress", "RegisteredUser")</li>
                    <li>@Html.ActionLink("Order History", "OrderHistoryPeople", "RegisteredUser")</li>
                    <li class="search">@using (Html.BeginForm("TestCallWalmart", "RegisteredUser", FormMethod.Get))
                    {

                        @Html.TextBox("search")<button type="submit">Search</button>
                    }</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
         
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @Html.ActionLink("Become Deliverer", "ApplyToDeliverer", "RegisteredUser")
            <p>&copy; @DateTime.Now.Year - ChipShip</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
